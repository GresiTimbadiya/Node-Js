<%- include('../header') %>
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid pt-1">
            <div class="row justify-content-center">
                <div class="col-md-7">
                    <div class="card shadow-lg">
                        <form class="form-horizontal" action="/product/updateProduct/<%= singleProduct._id %>"
                            method="post" enctype="multipart/form-data">
                            <div class="card-body" style="padding-left: 45px; padding-right: 0px;">
                                <h3 class="card-title text-center mr-5 mb-4">Edit Product</h3>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-2 px-0 text-center control-label col-form-label">Title :</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="title"
                                            value="<%=singleProduct.title %> " placeholder="Enter product title...">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="cono1"
                                        class="col-sm-2 text-center px-0 control-label col-form-label">Description</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control" name="description"
                                            placeholder="Enter description..."><%= singleProduct.description %></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 text-center px-0 mt-2">Category</label>
                                    <div class="col-md-9">
                                        <select name="category" id="category" class="form-control custom-select"
                                            style="width: 100%; height:36px;" disabled>
                                            <option>
                                                <%= singleProduct.category.categoryName %>
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 text-center px-0 mt-2">Sub Category</label>
                                    <div class="col-md-9">
                                        <select name="subCategory" id="subcategory" class="form-control custom-select"
                                            style="width: 100%; height:36px;" disabled>
                                            <option>
                                                <%= singleProduct.subCategory.subCategoryName %>
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 text-center px-0 mt-2">Extra Category</label>
                                    <div class="col-sm-9">
                                        <select name="extraCategory" id="extracategory"
                                            class="form-control custom-select" style="width: 100%; height:36px;"
                                            disabled>
                                            <option>
                                                <%= singleProduct.extraCategory.extraCategoryName %>
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-2 px-0 text-center control-label col-form-label">Price :</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="price"
                                            value="<%= singleProduct.price %>" placeholder="Enter price...">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-2 px-0 text-center control-label col-form-label">Discount
                                        :</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="discount" value="<%= singleProduct.discount %>"
                                            placeholder="Enter discount...">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-2 px-0 text-center control-label col-form-label">Quantity
                                        :</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="quantity"
                                            value="<%= singleProduct.quantity %>" placeholder="Enter quantity...">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-2 px-0 text-center mt-2">Image</label>
                                    <div class="col-md-6 d-flex mr-3">
                                        <input type="file" name="image" value="<%= singleProduct.image %>"
                                            class="custom-file-input" id="validatedCustomFile">
                                        <label class="custom-file-label" for="validatedCustomFile">Choose
                                            file...</label>
                                    </div>
                                    <img src="<%= singleProduct.image %>" alt="image" width="80">
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <input type="submit" value="Update Product"
                                        class="btn btn-success d-block mx-auto" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer') %>